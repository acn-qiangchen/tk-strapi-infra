[
    {
      "name": "${SERVICE_NAME}",
      "image": "${ECR_ARN}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 1337,
          "hostPort": 1337
        }
      ],
      "environmentFiles": [
        {
            "value": "arn:aws:s3:::${ENVFILE_BUCKET}/${ENV_FILE_NAME}",
            "type": "s3"
        }
      ],
      "logConfiguration": {
        "logDriver": "${LOG_DRIVER}",
        "options": {
          "awslogs-region": "${REGION}",
          "awslogs-group": "${LOGS_GROUP_NAME}",
          "awslogs-stream-prefix": "${SERVICE_NAME}"
        }
      }
    }
  ]
  
  